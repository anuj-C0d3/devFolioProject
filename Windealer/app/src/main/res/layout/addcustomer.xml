<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCustomer"
    style="@style/myblacktheme">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entry_text" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/myblacktheme">

            <EditText
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Customer name"
                android:inputType="textPersonName"
                android:paddingLeft="9dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/customerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:paddingLeft="9dp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/customer_name"
                app:layout_constraintTop_toBottomOf="@+id/customer_name" />

            <EditText
                android:id="@+id/callnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="phone"
                android:paddingLeft="9dp"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/customerAddress"
                app:layout_constraintTop_toBottomOf="@+id/customerAddress" />

            <EditText
                android:id="@+id/Product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Product"
                android:inputType="text"
                android:paddingLeft="9dp"
                app:layout_constraintStart_toStartOf="@+id/callnum"
                app:layout_constraintTop_toBottomOf="@+id/callnum" />

            <EditText
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:paddingLeft="9dp"
                app:layout_constraintStart_toStartOf="@+id/Product"
                app:layout_constraintTop_toBottomOf="@+id/Product" />

            <EditText
                android:id="@+id/down_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Down Payment"
                android:inputType="numberDecimal"
                android:paddingLeft="9dp"
                app:layout_constraintStart_toStartOf="@+id/price"
                app:layout_constraintTop_toBottomOf="@+id/price" />

            <EditText
                android:id="@+id/emitext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Emi"
                android:inputType="numberDecimal"
                android:paddingLeft="9dp"
                app:layout_constraintEnd_toEndOf="@+id/due"
                app:layout_constraintStart_toStartOf="@+id/due"
                app:layout_constraintTop_toBottomOf="@+id/due" />

            <EditText
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/textback"
                android:ems="10"
                android:hint="Date of purchase"
                android:inputType="date"
                android:paddingLeft="9dp"
                app:layout_constraintStart_toStartOf="@+id/emitext"
                app:layout_constraintTop_toBottomOf="@+id/emitext" />

            <Button
                android:id="@+id/send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/shadblue"
                android:text="Add to your custormers"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/date"
                app:layout_constraintStart_toStartOf="@+id/date"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <TextView
                android:id="@+id/due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/textback"
                android:gravity="center_vertical"
                android:hint="Total due"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/down_payment"
                app:layout_constraintStart_toStartOf="@+id/down_payment"
                app:layout_constraintTop_toBottomOf="@+id/down_payment" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/entry_text"
        style="@style/topbartheme"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="Add Customer"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>